@page
@model MyApp.Pages.GroupTables.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Создать</h2>

<h4>Группы</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupTable.NameOfGroup" class="control-label"><p>Название группы</p></label>
                <input asp-for="GroupTable.NameOfGroup" class="form-control" />
                <span asp-validation-for="GroupTable.NameOfGroup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupTable.Speciality" class="control-label"><p>Специальность</p></label>
                <input asp-for="GroupTable.Speciality" class="form-control" />
                <span asp-validation-for="GroupTable.Speciality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
