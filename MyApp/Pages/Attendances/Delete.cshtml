@page
@model MyApp.Pages.Attendances.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Удалить</h2>

<h3>Вы действительно хотите удалить этот элемент?</h3>
<div>
    <h4>Посещаемость</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Дата:</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Attendance.Data)
        </dd>
        <dt>
            <p>Пара:</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Attendance.Lesson)
        </dd>
        <dt>
            <p>Флаг присутствия:</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Attendance.Presense)
        </dd>
        <dt>
            <p>Время опоздания:</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Attendance.TimeOfDelay)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Attendance.ID" />
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        <a asp-page="./Index">Назад</a>
    </form>
</div>
