@page
@model MyApp.Pages.DisciplineInformations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Изменить</h2>

<h4>Информация об учебных дисциплинах</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DisciplineInformation.ID" />
            <div class="form-group">
                <label asp-for="DisciplineInformation.Speciality" class="control-label"><p>Специальность</p></label>
                <input asp-for="DisciplineInformation.Speciality" class="form-control" />
                <span asp-validation-for="DisciplineInformation.Speciality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisciplineInformation.Discipline" class="control-label"><p>Дисциплина</p></label>
                <input asp-for="DisciplineInformation.Discipline" class="form-control" />
                <span asp-validation-for="DisciplineInformation.Discipline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisciplineInformation.AmountOfLections" class="control-label"><p>ЛК</p></label>
                <input asp-for="DisciplineInformation.AmountOfLections" class="form-control" />
                <span asp-validation-for="DisciplineInformation.AmountOfLections" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisciplineInformation.AmountOfLabs" class="control-label"><p>ЛБ</p></label>
                <input asp-for="DisciplineInformation.AmountOfLabs" class="form-control" />
                <span asp-validation-for="DisciplineInformation.AmountOfLabs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisciplineInformation.AmountOfPractics" class="control-label"><p>ПР</p></label>
                <input asp-for="DisciplineInformation.AmountOfPractics" class="form-control" />
                <span asp-validation-for="DisciplineInformation.AmountOfPractics" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
